<% provide(:title, "Product Distination")%>

<div class="row show-product-info">
    <div class="col-md-6">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h3>Products Data</h3>
            </div>
            <div class="panel-body">
             <div>
                <div class="form-group">
                    <label for="ref">Reference:</label>
                    <span name="ref"><%= @product.reference %></span>
                </div>
                <div class="form-group">
                    <label for="name">Name:</label>
                    <span name="name"><%= @product.name %></span>
                </div>
                <div class="form-group">
                    <label for="category">Category:</label>
                    <span name="category"><%= @product.category %></span>
                </div>
                <div class="form-group">
                    <label for="price">Price:</label>
                    <span name="price"><%= @product.price %></span>
                </div>
             </div>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="panel panel-info">
            <div class="panel-heading">
                <h3>Destination</h3>
            </div>
            <div class="panel-body">
             <div>
             <% if @criteria %>
                <div class="form-group">
                    <label for="distination">Destination:</label>
                    <span name="distination"><%= @criteria.distination %></span>
                </div>
                <div class="form-group">
                    <label for="criteria">Criteria:</label>
                    <span name="criteria"><%= @criteria.criteria %> </span>
                </div>
            <% else %>
                <div class="form-group">
                    <div class="alert alert-warning">Can't Find Destination for this product</div>
                </div>
            <% end %>
             </div>
            </div>
        </div>
    </div>
</div>